<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.armscat.photoeditor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.armscat.photoeditors.Activity.ImageGridActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeTranslucent" />
        <activity
            android:name="com.armscat.photoeditors.Activity.ImagePreviewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeTranslucent" />
        <activity
            android:name="com.armscat.photoeditors.Activity.ImagePreviewBaseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ThemeTranslucent"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.armscat.photoeditors.Activity.TranslucentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeTranslucent" />
        <activity
            android:name="com.armscat.photoeditors.Activity.IMGEditActivity"
            android:theme="@style/ImageEditTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>