<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:centerColor="#F0f2f4"
                android:endColor="#F0f2f4"
                android:startColor="#F0f2f4" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- content -->
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>